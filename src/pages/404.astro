---
import Layout from "@layouts/Layout.astro";
import Button from "@components/Button/Button.astro";
import siteData from "@config/siteData.json";
---

<Layout title={`${siteData.author.name} - 404`} description="Error 404 page not found.">
  <section class="container pt-24 md:pt-36">
    <div class="w-full py-20 text-center md:py-32">
      <div class="mx-auto max-w-xl px-4 text-center">
        <h1 class="h1 text-gradient">404.</h1>
        <p class="description mt-4">
          Oops! It looks like one of our links took a wrong turn. Please try again or head back to the homepage.
        </p>
        <div class="mt-8 flex justify-center">
          <Button variant="ghost" href="/">Go to homepage</Button>
        </div>
      </div>
    </div>
  </section>
</Layout>
